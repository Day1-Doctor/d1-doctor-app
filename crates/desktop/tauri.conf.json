{
  "$schema": "https://schema.tauri.app/config/v1",
  "productName": "Day 1 Doctor",
  "version": "0.1.0",
  "identifier": "com.day1doctor.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devPath": "../src",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../src/dist",
    "features": []
  },
  "app": {
    "windows": [
      {
        "title": "Day 1 Doctor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "focusable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'",
      "dangerousDisableAllOriginValidation": false,
      "dangerousUseHttpsSchema": true
    }
  },
  "package": {
    "productName": "Day 1 Doctor",
    "version": "0.1.0"
  },
  "tauri": {
    "pattern": {
      "use": "linux",
      "linux": {
        "asarProtocol": [
          {
            "scope": [
              "$HOME/**"
            ]
          }
        ]
      }
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "execute": true,
        "open": true
      },
      "fs": {
        "all": false,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "createDir": true,
        "removeDir": true,
        "removeFile": true
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true,
        "message": true,
        "ask": true
      },
      "http": {
        "all": false,
        "request": true,
        "scope": [
          "https://api.day1doctor.com/**"
        ]
      }
    },
    "windows": [
      {
        "title": "Day 1 Doctor",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "url": "/",
        "label": "main"
      }
    ],
    "cli": {
      "description": "Day 1 Doctor â€” AI-powered system setup assistant",
      "longDescription": "Day 1 Doctor automates the tedious first-day developer machine setup. Install entire dev stacks, manage plugins, and get AI-assisted configuration recommendations.",
      "beforeHelp": "Day 1 Doctor CLI",
      "afterHelp": "See https://day1doctor.com for more information",
      "args": [
        {
          "short": "v",
          "name": "verbose",
          "description": "Enable verbose logging",
          "takesValue": false,
          "multiple": false
        }
      ],
      "subcommands": [
        {
          "name": "serve",
          "description": "Start development server",
          "takesValue": false
        }
      ]
    }
  }
}
